<% include ../../../views/partials/header %>
<% include ../overview/overview_partials/header %>

<div class="container-fluid">
    <main role="main" class="col-md-10 ml-sm-auto col-lg-11">
        <div class="card border-light mx-1">
            <h3 class="card-header bg-transparent display-4 font-responsive" style="margin-top: 8vh; margin-left: 3vh;">Overview
            </h3>
            <div class="card-body" style="margin-left: 5vh;">
                <h4 class="card-title display-4 font-responsive" style="font-size: x-large;">#<%= data[0].projectid%> <%= data[0].name %>
                </h4>
                <div class="card mt-2">
                    <div class="card-body">
                        <h5 class="card-title ">Issue Tracking</h5>
                        <ul class="list-group">
                            
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Bug
                                <span  class="badge badge-warning" >
                                   <%= bugOpen %> Open / <%= bugTotal %>
                                </span>
                            </li>
                            
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Feature
                                <span class="badge badge-dark" >
                                    <%= featureOpen %> Open / <%= featureTotal %>
                                </span>
                            </li>
                            
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Support
                                <span class="badge badge-success" >
                                    <%= supportOpen %> Open / <%= supportTotal %>
                                    
                                </span>
                            </li>
                            
                        </ul>
                    </div>
                </div>
                <div class="card mt-2">
                    <div class="card-body">
                        <h5 class="card-title">Members</h5>
                        <ul class="list-group">
                            <% data.forEach((item, index) =>{ %>

                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <%= `${item.firstname} ${item.lastname}` %><i class="fa fa-user-o"></i>
                                </li>
                         
                            <% }) %>
                            
                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<% include ../../../views/partials/footer %>
<% include ../overview/overview_partials/footer %>

