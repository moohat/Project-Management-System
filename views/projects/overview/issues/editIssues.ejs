<% include ../../../../views/partials/header %>


<div class="container">
    <br />
      <h2>Add Issues to Project</h2>
      <br />
      <!-- <form action="/projects/issues/<%=/* data[0].projectid */%>/add" method="POST" encType="multipart/form-data">      -->
        <form action="" method="POST" encType="multipart/form-data">     
           
           
          <!--       Tracker        -->
          <div class="form-group row">
              <label for="string" class="col-sm-2 col-form-label">Tracker</label>
              <div class="col-sm-6">
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="tracker" id="bug" value="bug"<%= data.tracker == 'bug' ? 'checked' : '' %> >
                    <label class="form-check-label" for="bug">
                      Bug
                    </label>
                  </div>
                  <div class="form-check">
                      <input class="form-check-input" type="radio" name="tracker" id="feature" value="feature"<%= data.tracker == 'feature' ? 'checked' : '' %> >
                      <label class="form-check-label" for="feature">
                        Feature
                      </label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="tracker" id="support" value="support"<%= data.tracker == 'support' ? 'checked' : '' %> >
                      <label class="form-check-label" for="support">
                        Support
                      </label>
                    </div>
              </div>            
          </div> 

          <!--Subject-->
          <div class="form-group row">
            <label for="string" class="col-sm-2 col-form-label">Subject</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="subject"  name="subject" value="<%= data.subject %>">
            </div>
          </div>

          <!--Description-->
          <div class="form-group row">
            <label for="string" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-6">
                <textarea class="form-control" id="description" name="description" placeholder="Description" rows="3" > <%= data.description %></textarea>
            </div>
          </div>
          
          <!--       Tracker        -->
          <div class="form-group row">
            <label for="string" class="col-sm-2 col-form-label">Status</label>
            <div class="col-sm-6">
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="status" id="status" value="new" <%= data.status == 'new' ? 'checked disabled' : '' %>>
                  <label class="form-check-label" for="new">
                    New
                  </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="status" id="inprogress" value="inprogress" <%= data.status == 'inprogress' ? 'checked' : '' %> >
                    <label class="form-check-label" for="inprogress">
                      In Progress
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="status" id="feedback" value="feedback" disabled>
                    <label class="form-check-label" for="feedback">
                      Feedback
                    </label>
                  </div>

                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="status" id="resolved" value="resolved" disabled>
                    <label class="form-check-label" for="resolved">
                      Resolved
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="status" id="closed" value="closed" disabled>
                    <label class="form-check-label" for="closed">
                      Closed
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="status" id="rejected" value="rejected" disabled>
                    <label class="form-check-label" for="rejected">
                      Rejected
                    </label>
                  </div>
            </div>            
        </div> 
        <!-- Priority -->
        <div class="form-group row">
          <label for="string" class="col-sm-2 col-form-label">Priority</label>
          <div class="col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="priority" id="normal" value="Normal" >
                <label class="form-check-label" for="normal">
                  Normal
                </label>
              </div>
              <div class="form-check">
                  <input class="form-check-input" type="radio" name="priority" id="high" value="high" >
                  <label class="form-check-label" for="high">
                    High
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="priority" id="urgent" value="urgent" >
                  <label class="form-check-label" for="urgent">
                    Urgent
                  </label>
                </div>

                <div class="form-check">
                  <input class="form-check-input" type="radio" name="priority" id="immediate" value="immediate" >
                  <label class="form-check-label" for="immediate">
                    Immediate
                  </label>
                </div>                
          </div>            
      </div>
        <!-- assignee -->
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">assigneee</label>
          <div class="col-sm-6">
              <select class="custom-select d-block w-100" id="assignee" name="assignee">
                <% users.forEach((users, index) =>{ %>
                  <option value="<%= users.userid %>" <%= users.userid = data.userid ? 'selected' : '' %>> <%= users.fullname %> </option>
                <% }) %>                     
                </select>
          </div>
      </div>    
      
      <!--Start Date-->
          <div class="form-group row">
            <label for="string" class="col-sm-2 col-form-label">Start Date</label>
            <div class="col-sm-6">
                <input type="date" class="form-control" name="startdate">
            </div>
          </div>
          <!--End Date-->
          <div class="form-group row">
            <label for="string" class="col-sm-2 col-form-label">Due Date</label>
            <div class="col-sm-6">
                <input type="date" class="form-control" name="duedate">
            </div>
          </div>
          <!--Estimated Time-->
          <div class="form-group row">
            <label for="string" class="col-sm-2 col-form-label">Estimated Time</label>
            <div class="col-sm-6">
                <input type="number" class="form-control" placeholder="Estimated Time (hours)"  name="estimatedtime">
            </div>
          </div>
          <!-- Done (%) -->
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Done(%)</label>
          <div class="col-sm-6">
              <select class="custom-select d-block w-100" name="done">
                <option disabled selected> Choose the Percentage... </option>
                <% for(let i =0; i<=100; i+=10){ %>
                  <option > <%= i %> </option>
                <% } %>                     
                </select>
          </div>
      </div>   
      <!-- File --> 
      <div class="form-group row">
            <label for="string" class="col-sm-2 col-form-label">File</label>
            <div class="col-sm-6">
                <input type="file" class="form-control"  name="sampleFile" value="sampleFile">
            </div>
          </div>

          <!-- SPENT Time-- --> 
      <div class="form-group row">
            <label for="string" class="col-sm-2 col-form-label">Spent Time (Hours)</label>
            <div class="col-sm-6">
                <input type="number" class="form-control"  name="spenttime" id="" readonly>
            </div>
          </div>

          <!-- Target Version--> 
      <div class="form-group row">
            <label for="string" class="col-sm-2 col-form-label">Target Version</label>
            <div class="col-sm-6">
                <input type="text" class="form-control"  name="targetversion" id="" placeholder="Target Version">
            </div>
          </div>

              <div class="form-group row">   
                  <div class="col-sm-10">    
                  <button type="submit" class="btn btn-default btn-success">Update</button>
                  
              </div>     
             </div> 
  


<%- include ../../../../views/partials/footer %> 