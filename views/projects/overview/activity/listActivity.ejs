<% include ../../../../views/partials/header %> <% include
../../overview/overview_partials/header %>

<div class="container-fluid">
  <main role="main" class="col-md-10 ml-sm-auto col-lg-11">
    <div class="card border-light mx-1">
      <h5
        class="card-header bg-transparent display-4 font-responsive"
        style="margin-top: 8vh; margin-left: 5vh;"
      >
        Activity
      </h5>
      <div class="card">
        <div class="card-header">Project Activity# <%= data.name %></div>
        <div class="list-group">
          <!-- ISSUES -->
          <% if(issues.length > 0){ %> <% issues.forEach((item, index) =>{ %>

          <li class="list-group-item">
            <span class="badge badge-primary badge-pill"><%= moment(item.time).format("YYYY-MM-DD HH:mm ha") %></span>
            <p class="mb-1"><%= item.description %></p>
            <small>Author: <%= item.author %></small>
          </li>
          <% }) %>
          <!-- NO ACTIVITY ALERT -->

          <% } else{ %>
          <div class="alert alert-warning" role="alert">
            There's no Activity
          </div>

         <% } %>
        </div>
      </div>
    </div>
  </main>
</div>

<%- include ../../../../views/partials/footer %> 
<% include ../../overview/overview_partials/footer %>
