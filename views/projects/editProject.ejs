<% include ../partials/header%>
<div class="container">
    <h2>Edit Project</h2>
    <br />
    <form action="" method="POST">
        
        <!--       String        -->
        <div class="form-group row">
          <label for="string" class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-6">
              <input type="text" class="form-control" id="name" name="name" value="<%= name  %>">
          </div>
        </div>
        <div class="form-group row">
            <label for="member" class="col-sm-2 col-form-label">Members</label>
            <div class="col-sm-10">
                <% users.forEach((item) => { %>
                <div class="custom-control custom-checkbox my-1 mr-sm-2">
                    <input type="checkbox" class="custom-control-input" id="customControlInline<%=item.userid%>"
                        name="member" value="<%= item.userid%>, '<%= item.roles %>'" <%= members.includes(item.userid)  ? ' checked': ''%>>
                    <label class="custom-control-label"
                        for="customControlInline<%=item.userid%>"><%= item.firstname %> <%= item.lastname %></label>
                </div>
                <% })%>
            </div>

            </div>
            <div class="form-group row">   
                <div class="col-sm-10">    
                <button type="submit" class="btn btn-default btn-success">Save</button>
                <a href="/projects" class="btn btn-warning">Cancel</a>
            </div>     
           </div> 

<% include ../partials/footer %>