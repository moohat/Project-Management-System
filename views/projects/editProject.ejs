<% include ../partials/header%>
<div class="container">
    <h2>Edit Project</h2>
    <br />
    <form action="" method="POST">
        
        <!--       String        -->
        <div class="form-group row">
          <label for="string" class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-6">
              <input type="text" class="form-control" id="projectname" name="projectname" value="<%= project.name  %>">
          </div>
        </div>
        <div class="form-group row">
            <label for="member" class="col-sm-2 col-form-label">Members</label>
            <div class="col-sm-3">
                <% members.forEach((member) => {%>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="member" id="<%=member.userid %>" value="<%= member.userid %>" <%= isMember.includes(member.userid) ? ' checked': '' %>/>
                    <label class="form-check-label" for="<%= member.userid%>">
                        <%= member.firstname + " "+ member.lastname %>
                    </label>
                </div>
                <% }) %>
            </div>

            </div>
            <div class="form-group row">   
                <div class="col-sm-10">    
                <button type="submit" class="btn btn-default btn-success">Save</button>
                <a href="/projects" class="btn btn-warning">Cancel</a>
            </div>     
           </div> 

<% include ../partials/footer %>