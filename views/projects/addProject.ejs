<% include ../partials/header%>

<div class="container">
    <h2>Add Project</h2>
    <% if(dataNull.length > 0) { %>
        <div class="alert alert-warning" role="alert">
            <h2> <%= dataNull %></h2>
        </div>
        <%}%>
    <br />
    <form action="" method="POST">
        
        
        <!--       String        -->
        <div class="form-group row">
          <label for="string" class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-6">
              <input type="text" class="form-control" id="name" placeholder="Input nama Project" name="name" required>
          </div>
        </div>
        <div class="form-group row">
            <label for="member" class="col-sm-2 col-form-label">Members</label>
            <div class="col-sm-3">
                <% for(let i = 0; i < data.length; i++){ %>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="member" id="gridCheck1" value="<%= data[i].userid %>, '<%= data[i].role %>'" >
                        <label class="form-check-label" for="gridCheck1">
                          <%= data[i].firstname%> <%= data[i].lastname%>
                        </label>
                    </div>
                    <% } %>
            </div>

            </div>
            <div class="form-group row">   
                <div class="col-sm-10">    
                <button type="submit" class="btn btn-default btn-success">Save</button>
                <a href="/projects" class="btn btn-warning">Cancel</a>
            </div>     
           </div> 

    
<% include ../partials/footer %>