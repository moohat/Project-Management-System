<% include ../partials/header%>

<div class="container">
    <h2>Add Data</h2>
    <br />
    <form action="" method="POST">
        
        <!--       String        -->
        <div class="form-group row">
          <label for="string" class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-6">
              <input type="text" class="form-control" id="projectname" placeholder="Input nama Project" name="projectname">
          </div>
        </div>
        <div class="form-group row">
            <label for="member" class="col-sm-2 col-form-label">Members</label>
            <div class="col-sm-3">
                <% users.forEach((item) => {%>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="members" value="<%= item.userid %>"/>
                    <label class="form-check-label">
                        <%= item.fullname %>
                    </label>
                </div>
                <% }) %>
            </div>

            </div>
            <div class="form-group row">   
                <div class="col-sm-10">    
                <button type="submit" class="btn btn-default btn-success">Save</button>
                <a href="/projects" class="btn btn-warning">Cancel</a>
            </div>     
           </div> 

    
<% include ../partials/footer %>