<% include ../partials/header %>
<br />
<br />
<div class="container">
  <h1>Users</h1>
  
      <hr>
      <h2>Filters</h2>
      <br />
      <form action="" method="GET">
        <!--       id        -->
        <div class="container col-sm-10">
            <div class="form-group row">         
              <label class="col-sm-2 col-form-label"><input type="checkbox" for="checkid" name="checkid">ID</label>
              <div class="col-sm-6">
                <input
                  type="text"
                  class="form-control"
                  id="id"
                  placeholder="id"
                  name="id"
                />
              </div>
            </div>
            <!--       name        -->
            <div class="form-group row">
              <label for="checkname" class="col-sm-2 col-form-label"><input type="checkbox" id="checkname" name="checkname">Full Name</label>
              <div class="col-sm-6">
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  placeholder="name"
                  name="name"
                />
              </div>
            </div>
            <!--       EMAIL        -->
            <div class="form-group row">
              <label for="email" class="col-sm-2 col-form-label"><input type="checkbox" id="checkemail" name="checkemail">Email</label>
              <div class="col-sm-6">
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  placeholder="Email"
                  name="email"
                />
              </div>
            </div>
             <!--       POSITION        -->
             <div class="form-group row">
              <label for="position" class="col-sm-2 col-form-label"><input type="checkbox" id="position">Email</label>
              <div class="col-sm-6">
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  placeholder="Email"
                  name="email"
                />
              </div>
            </div>
    
            <div class="form-group row">
                <div class="col-sm-10">
                  <button type="submit" name="button" class="btn btn-primary">Search</button>
                  <a href="/users" class="btn btn-warning">Reset</a>
                </div>
            </div>
        </div>
      </form>
      <h2><i class="fas fa-columns"></i> Options</h2>
      <form action="" method="POST">
          <div class="form-group row">
              <div class="col-sm-2">Column</div>
              <div class="col-sm-3">
                  <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="oprojectid" value="true"/>
                      <label class="form-check-label" for="projectid">
                          ID
                      </label>
                  </div>
                  <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="oname" value="true"/>
                      <label class="form-check-label" for="name">
                          Name
                      </label>
                  </div>
                  <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="omember" value="true"/>
                      <label class="form-check-label" for="member">
                          Members
                      </label>
                  </div>
              </div>
          </div>
          <button type="submit" class="btn btn-primary"><i class="fas fa-check-circle"></i> Apply</button>
      </form>
      <br />

      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Email</th>
            <th scope="col">Name</th>
            <th scope="col">Position</th>
            <th scope="col">Type Job</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
        
          <% for(const item of data)  { %>
            <tr>
              <td> <%= item.userid %></td>
              <td> <%= item.email %></td>
              <td> <%= item.firstname %></td>
              <td> <%= item.position %></td>
              <td> <%= item.jobtype %></td>

              <td>
                <a class="btn btn-success edit" href="/users/edit/<%= item.userid %>">Edit</a>                       
<a class="btn btn-danger delete" onclick="return confirm('Are you sure you want to delete this item?');" href="/users/delete/<%= item.userid %>">Delete</a>    
              </td>
              
             
            </tr>

            <% } %>
        
        </tbody>
      </table>

        <!--PAGINATION-->
        <br />
        <nav aria-label="table">
            <ul class="pagination">
                <li class="page-item <%= page == 1 ? 'disabled': ''; %>"><a class="page-link"
                        href="/?page=<%= parseInt(page) - 1%>">Previous</a></li>
                <% for (let i = 1; i <= pages; i++) { %>
                <li class="page-item <%= page == i ? 'active': ''; %>"><a class="page-link"  href="/users<%= url.replace(`page=${page}`, `page=${i}`) %>">
                        <%= i %></a></li>
                <% }; %>
                <li class="page-item <%= page == pages ? 'disabled': ''; %>"><a class="page-link"
                        href="/users?page=<%= parseInt(page) + 1%>">Next</a></li>
            </ul>
        </nav>



        <div class="form-group row">
          <a href="users/add"
            ><button type="button" class="btn btn-primary">add</button></a
          >
        </div>
    </div>

    <% include ../partials/footer %>

