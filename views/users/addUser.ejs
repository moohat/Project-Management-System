<% include ../partials/header%>

<div class="container">
    <h2>Add User</h2>
    <form action="" method="POST">
        
        <!--       First Name        -->
        <div class="form-group row">
          <label for="string" class="col-sm-2 col-form-label">First Name</label>
          <div class="col-sm-6">
              <input type="text" class="form-control" id="firstname" placeholder="Input First Name" name="firstname" required>
          </div>
        </div>
           <!--       Last Name        -->
           <div class="form-group row">
            <label for="string" class="col-sm-2 col-form-label">Last Name</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="lastname" placeholder="Input Last Name" name="lastname" required>
            </div>
          </div> 
          <!--       Last Name        -->
          <div class="form-group row">
           <label for="string" class="col-sm-2 col-form-label">Email</label>
           <div class="col-sm-6">
               <input type="email" class="form-control" id="email" placeholder="Email" name="email" required>
           </div>
         </div>

           <!--       Last Name        -->
           <div class="form-group row">
            <label for="string" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-6">
                <input type="password" class="form-control" id="password" placeholder="password" name="password" required>
            </div>
          </div>

        <!-- POSITION -->
        <div class="form-group row">
          <label class="col-sm-2">Position</label>
          <!-- POSITION CHOICES -->
          <div class="form-group col-sm-3">
            <div class="custom-control custom-radio">
              <input type="radio" class="custom-control-input" id="manager" name="position" value="Manager">
              <label class="custom-control-label" for="manager">Manager</label>
            </div>
            <div class="custom-control custom-radio">
              <input type="radio" class="custom-control-input" id="softdev" name="position" value="Software Developer">
              <label class="custom-control-label" for="softdev">Software Developer</label>
            </div>
            <div class="custom-control custom-radio">
              <input type="radio" class="custom-control-input" id="qa" name="position" value="Quality Assurance">
              <label class="custom-control-label" for="qa">Quality Assurance</label>
            </div>
          </div>
        </div>

         <!--       Job Type        -->
         <div class="form-group row">
          <label class="col-sm-2">Job Type</label>
          <div class="form-group col-sm-3">
            <div class="custom-control custom-radio">
              <input type="radio" class="custom-control-input" id="jobtype1" name="jobtype" value="Full Time">
              <label class="custom-control-label" for="jobtype1">Full Time</label>
            </div>
            <div class="custom-control custom-radio">
              <input type="radio" class="custom-control-input" id="jobtype2" name="jobtype" value="Part Time">
              <label class="custom-control-label" for="jobtype2">Part Time</label>
            </div>
          </div>
        </div>

      
            <div class="form-group row">   
                <div class="col-sm-10">    
                <button type="submit" class="btn btn-default btn-success">Save</button>
                <a href="/users" class="btn btn-warning">Cancel</a>
            </div>     
           </div> 

    
<% include ../partials/footer %>